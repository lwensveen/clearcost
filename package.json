{
  "name": "clearcost",
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@dotenvx/dotenvx": "^1.49.0",
    "@types/bun": "^1.2.21",
    "@vitest/coverage-v8": "^3.2.4",
    "bun-types": "^1.2.21",
    "husky": "^9.1.7",
    "prettier": "^3.6.2",
    "turbo": "^2.5.6",
    "typescript": "5.9.2",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "bun@1.2.17",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "check-types": "turbo run check-types",
    "dev": "turbo run dev",
    "format": "prettier --write \"**/*.{ts,tsx,md,yml}\"",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint -- --fix",
    "prepare": "husky",
    "internal-request": "bun run scripts/internal-request.ts",
    "test": "vitest run",
    "test:ci": "vitest run --passWithNoTests",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest",
    "validate-docs": "bun run scripts/validate-docs.ts",
    "validate-envs": "bun run scripts/validate-turbo-envs.ts"
  },
  "trustedDependencies": [
    "@clearcost/widget",
    "@tailwindcss/oxide"
  ],
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
