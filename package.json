{
  "name": "clearcost",
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "@commitlint/cli": "^20.4.0",
    "@commitlint/config-conventional": "^20.4.0",
    "@dotenvx/dotenvx": "^1.52.0",
    "@types/bun": "^1.3.8",
    "@vitest/coverage-v8": "^4.0.18",
    "bun-types": "^1.3.8",
    "husky": "^9.1.7",
    "prettier": "^3.8.1",
    "turbo": "^2.8.2",
    "typescript": "5.9.3",
    "vitest": "^4.0.18"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "bun@1.2.17",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "check-types": "turbo run check-types",
    "dev": "turbo run dev",
    "format": "prettier --write \"**/*.{ts,tsx,md,yml}\"",
    "internal-request": "bun run scripts/internal-request.ts",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint -- --fix",
    "prepare": "husky",
    "test": "vitest run",
    "test:ci": "vitest run --passWithNoTests",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest",
    "validate-docs": "bun run scripts/validate-docs.ts",
    "validate-envs": "bun run scripts/validate-turbo-envs.ts"
  },
  "trustedDependencies": [
    "@clearcost/sdk",
    "@clearcost/widget",
    "@tailwindcss/oxide",
    "esbuild",
    "sharp"
  ],
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
