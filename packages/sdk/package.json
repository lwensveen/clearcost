{
  "name": "@clearcost/sdk",
  "version": "0.1.0",
  "dependencies": {
    "@clearcost/types": "workspace:*"
  },
  "devDependencies": {
    "esbuild": "^0.27.2",
    "typescript": "5.9.3"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.esm.js",
      "default": "./dist/index.esm.js"
    }
  },
  "files": [
    "dist"
  ],
  "jsdelivr": "dist/index.umd.js",
  "main": "dist/index.umd.js",
  "module": "dist/index.esm.js",
  "scripts": {
    "build": "bun run build:types && bun run build:esm && bun run build:umd",
    "build:esm": "esbuild src/index.ts --bundle --format=esm --target=es2020 --sourcemap --minify --outfile=dist/index.esm.js",
    "build:types": "tsc -p tsconfig.json --emitDeclarationOnly",
    "build:umd": "esbuild src/index.ts --bundle --format=iife --global-name=ClearCostSDK --target=es2020 --sourcemap --minify --outfile=dist/index.umd.js"
  },
  "sideEffects": false,
  "type": "module",
  "types": "dist/index.d.ts",
  "unpkg": "dist/index.umd.js"
}
