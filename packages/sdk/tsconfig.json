{
  "extends": "@clearcost/typescript-config/base.json",
  "compilerOptions": {
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@clearcost/types": [
        "../types/src/index.ts"
      ],
      "@clearcost/types/*": [
        "../types/src/*"
      ],
      "@clearcost/db": [
        "../db/src/index.ts"
      ],
      "@clearcost/db/*": [
        "../db/src/*"
      ]
    }
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
