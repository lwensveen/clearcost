{
  "name": "@clearcost/types",
  "description": "Shared Zod schemas & TypeScript types for Clearcost monorepo",
  "version": "0.0.0",
  "dependencies": {
    "@clearcost/db": "workspace:*",
    "drizzle-zod": "^0.8.3",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@clearcost/eslint-config": "workspace:*",
    "@clearcost/typescript-config": "workspace:*",
    "@types/node": "^25.2.3",
    "esbuild": "^0.27.3",
    "eslint": "^10.0.0"
  },
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "main": "dist/index.js",
  "private": true,
  "scripts": {
    "build": "bun run build:types && bun run build:js",
    "build:js": "esbuild src/index.ts --bundle --format=esm --platform=neutral --packages=external --target=es2020 --outfile=dist/index.js",
    "build:types": "tsc -p tsconfig.json --emitDeclarationOnly",
    "check-types": "tsc --noEmit",
    "lint": "eslint src ",
    "prepare": "bun run build"
  },
  "sideEffects": false,
  "type": "module",
  "types": "src/index.ts"
}
