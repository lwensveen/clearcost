{
  "name": "@clearcost/db",
  "description": "Shared Zod schemas & TypeScript types for Clearcost monorepo",
  "version": "0.0.0",
  "dependencies": {
    "@neondatabase/serverless": "^1.0.1",
    "drizzle-kit": "^0.31.4",
    "drizzle-orm": "^0.44.4",
    "drizzle-zod": "^0.8.3",
    "pg": "^8.16.3",
    "postgres": "^3.4.7",
    "ws": "^8.18.3",
    "zod": "^4.0.17"
  },
  "devDependencies": {
    "@clearcost/eslint-config": "workspace:*",
    "@clearcost/typescript-config": "workspace:*",
    "@types/node": "^24.3.0",
    "@types/pg": "^8.15.5",
    "@types/ws": "^8.18.1",
    "eslint": "^9.33.0"
  },
  "files": [
    "dist"
  ],
  "main": "dist/index.js",
  "private": true,
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "migrate:generate": "drizzle-kit generate --config ./drizzle.config.ts",
    "migrate:push": "DRIZZLE_LOG=info drizzle-kit push --config ./drizzle.config.ts"
  },
  "sideEffects": false,
  "type": "module",
  "types": "dist/index.d.ts"
}
